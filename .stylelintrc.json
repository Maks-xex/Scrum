{
  "extends": ["stylelint-config-standard-scss", "stylelint-config-prettier"],
  "rules": {
    "selector-class-pattern": "^([a-z][a-zA-Z0-9]*)(__[a-zA-Z0-9]+)*$",
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind"]
      }
    ],
    "at-rule-no-unknown": null
  }
}
